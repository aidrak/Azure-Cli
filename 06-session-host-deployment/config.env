#!/bin/bash

################################################################################
# Configuration for 06-session-host-deployment
################################################################################

# Load centralized configuration
CENTRALIZED_CONFIG="${CENTRALIZED_CONFIG:-../config/avd-config.sh}"
[[ -f "$CENTRALIZED_CONFIG" ]] && source "$CENTRALIZED_CONFIG"

# ============================================================================
# AZURE ENVIRONMENT
# ============================================================================

export SUBSCRIPTION_ID="${SUBSCRIPTION_ID:-}"
export RESOURCE_GROUP_NAME="${RESOURCE_GROUP_NAME:-RG-Azure-VDI-01}"
export LOCATION="${LOCATION:-centralus}"

# ============================================================================
# SESSION HOST CONFIGURATION
# ============================================================================

# VM naming and count
export VM_NAME_PREFIX="${VM_NAME_PREFIX:-avd-sh}"
export SESSION_HOST_COUNT="${SESSION_HOST_COUNT:-3}"
export VM_SIZE="${VM_SIZE:-Standard_D4s_v5}"

# Image configuration
export IMAGE_GALLERY_NAME="${IMAGE_GALLERY_NAME:-avdGallery}"
export IMAGE_DEFINITION_NAME="${IMAGE_DEFINITION_NAME:-avd-image}"
export IMAGE_VERSION="${IMAGE_VERSION:-latest}"

# Host pool configuration
export HOST_POOL_NAME="${HOST_POOL_NAME:-avd-hostpool}"
export VNET_NAME="${VNET_NAME:-avd-vnet}"
export SESSION_HOSTS_SUBNET_NAME="${SESSION_HOSTS_SUBNET_NAME:-session-hosts-subnet}"

# Credentials for domain join (if required)
export DOMAIN_USERNAME="${DOMAIN_USERNAME:-}"
export DOMAIN_PASSWORD="${DOMAIN_PASSWORD:-}"

# ============================================================================
# LOGGING & ARTIFACTS
# ============================================================================

export LOG_LEVEL="${LOG_LEVEL:-INFO}"
export ENABLE_LOGGING="${ENABLE_LOGGING:-1}"
export ARTIFACTS_DIR="${ARTIFACTS_DIR:-artifacts}"

