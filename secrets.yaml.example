# ==============================================================================
# Secrets Configuration (COPY TO secrets.yaml)
# ==============================================================================
# This file contains sensitive values that should NEVER be committed to git.
#
# Usage:
#   1. Copy this file: cp secrets.yaml.example secrets.yaml
#   2. Fill in your actual secrets in secrets.yaml
#   3. secrets.yaml is in .gitignore and will never be committed
#
# The config-manager.sh will automatically load secrets.yaml and merge it with
# config.yaml, with secrets.yaml taking precedence.
# ==============================================================================

# ==============================================================================
# Golden Image Secrets
# ==============================================================================
golden_image:
  # Local admin password for golden image VM
  # REQUIRED for Module 05 (golden-image)
  # This password is used for temporary VM creation and configuration
  admin_password: "YourSecurePassword123!"

# ==============================================================================
# Azure Credentials (Optional - can use az login instead)
# ==============================================================================
# Uncomment if you want to store Azure credentials here
# NOT RECOMMENDED - use 'az login' or managed identity instead
#
# azure:
#   service_principal:
#     client_id: "your-app-id"
#     client_secret: "your-secret"
#     tenant_id: "your-tenant-id"

