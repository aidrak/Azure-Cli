#!/bin/bash

################################################################################
# Testing Configuration for AVD Deployment
################################################################################

# Load centralized configuration
CENTRALIZED_CONFIG="${CENTRALIZED_CONFIG:-../config/avd-config.sh}"
[[ -f "$CENTRALIZED_CONFIG" ]] && source "$CENTRALIZED_CONFIG"

# ============================================================================
# AZURE ENVIRONMENT
# ============================================================================

export SUBSCRIPTION_ID="${SUBSCRIPTION_ID:-}"
export RESOURCE_GROUP_NAME="${RESOURCE_GROUP_NAME:-RG-Azure-VDI-01}"

# ============================================================================
# DEPLOYMENT RESOURCES TO VALIDATE
# ============================================================================

export HOST_POOL_NAME="${HOST_POOL_NAME:-avd-hostpool}"
export VNET_NAME="${VNET_NAME:-avd-vnet}"
export STORAGE_ACCOUNT_NAME="${STORAGE_ACCOUNT_NAME:-}"

# ============================================================================
# TEST SETTINGS
# ============================================================================

export RUN_CONNECTIVITY_TESTS="${RUN_CONNECTIVITY_TESTS:-true}"
export RUN_PERFORMANCE_TESTS="${RUN_PERFORMANCE_TESTS:-false}"
export TEST_TIMEOUT="${TEST_TIMEOUT:-300}"

# ============================================================================
# LOGGING & ARTIFACTS
# ============================================================================

export LOG_LEVEL="${LOG_LEVEL:-INFO}"
export ENABLE_LOGGING="${ENABLE_LOGGING:-1}"
export ARTIFACTS_DIR="${ARTIFACTS_DIR:-artifacts}"
